#:import utils kivy.utils
<MyGridLayout>

    name:name
    pizza:pizza
    address:address

    GridLayout:
        cols:1
        size:   root.width, root.height
        GridLayout:
            cols:2

            Label:
                text:   "Name"
            TextInput:
                id: name
                multiline:False
                background_color:   utils.get_color_from_hex('#0345AB')

            Label:
                text:   "pizza"
            TextInput:
                id: pizza
                multiline:False

            Label:
                text:   "address"
            TextInput:
                id: address
                multiline:False
        Button:
            text:   "Submit"
            font_size:  42
            on_press:   root.press()
            background_normal:  ''
            #background_color:   (3/255.0,69/255.0,171/255.0,1)

            background_color:   utils.get_color_from_hex('#0345AB')