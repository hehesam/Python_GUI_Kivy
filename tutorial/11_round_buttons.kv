#:import utils kivy.utils

<MyLayout>

    BoxLayout:
        orientation:    "vertical"
        size:   root.width, root.height

        padding:    50
        spacing:    20

        Button:
            text:   "Hi"

        RoundedButton:
            text:   "By"
            pos_hint:   {'center_x':0.5}
            size_hint:  (1,0.3)
            #background_color:   (1,1,130/255,1)
            #background_color:   utils.get_color_from_hex('#1368f0')
            #background_normal:  ''
            on_press:   print("Goodbye")


<RoundedButton@Button>
    background_color:   (0,0,0,0)
    background_normal:  'images/button_normal.png'
    background_down:   'images/button_down.png'
    canvas.before:
        Color:
            rgba:   (19/255,104/255,240/255,1)
        RoundedRectangle:
            size:   self.size
            pos:    self.pos
            radius: [118]