#:import utils kivy.utils


<Button>
    font_size:  32
    background_normal:  ''
    background_color:   utils.get_color_from_hex('#0345AB')

<TextInput>
    font_size:  40
    background_color:   utils.get_color_from_hex('#2CE7ED')


<MyLayout>
    BoxLayout:
        orientation:    "vertical"
        size:   root.width, root.height
        padding:    10
        spacing:    10

        Label:
            text:   "Name"
            font_size:  40
            background_color:   (1,0,1,1)
            canvas.before:
                Color:
                    rgba:   self.background_color
                Rectangle:
                    size:   self.size
                    pos:    self.pos
            #   Text Properties
            color:  (0,1,0,1)
            bold:   True
            italic: True
            outline_color:  (0,0,0 )
            outline_width:  2

        TextInput:
            multiline:  False

        Label:
            text:   "Age"

        TextInput:
            multiline:  False

        Button:
            text:   "Clear"
            background_color:   utils.get_color_from_hex('#DF0505')