#:import utils kivy.utils

<Button>
    font_size:  32
    background_color:  (38/255,170/255,222/255,1)
    background_color:   utils.get_color_from_hex('#737373')
    #0e2b61

<MyLayout>
    BoxLayout:
        orientation:    "vertical"
        size:   root.width, root.height

        TextInput:
            id: calc_input
            text:   "0"
            halign: "right"
            multiline:  False
            font_size:  45
            size_hint:  (1, 0.1)

        GridLayout:
            cols:   4
            rows:   5

            # Row   1
            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "%"
                background_color:   (0,0,0,1)
                on_press:   root.press()

            Button:
                id: clear
                size_hint:  (.2,.2)
                font_size:  32
                text:   "C"
                background_color:   (0,0,0,1)
                on_press:   root.clear()

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   u"\u00AB"
                background_color:   (0,0,0,1)
                on_press:   root.remove()



            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "/"
                background_color:   (0,0,0,1)
                on_press:   root.math_sign("/")



            # Row   2
            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "7"
                on_press:   root.button_press(7)

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "8"
                on_press:   root.button_press(8)

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "9"
                on_press:   root.button_press(9)

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "X"
                background_color:   (0,0,0,1)
                on_press:   root.math_sign("*")



            # Row   3
            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "4"
                on_press:   root.button_press(4)

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "5"
                on_press:   root.button_press(5)

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "6"
                on_press:   root.button_press(6)

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "-"
                background_color:   (0,0,0,1)
                on_press:   root.math_sign("-")



            # Row   4
            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "1"
                on_press:   root.button_press(1)

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "2"
                on_press:   root.button_press(2)

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "3"
                on_press:   root.button_press(3)

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "+"
                background_color:   (0,0,0,1)
                on_press:   root.math_sign("+")

            # Row   5
            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "+/-"
                on_press:   root.pos_neg()

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "0"
                on_press:   root.button_press(0)

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "."
                on_press:   root.dot()

            Button:
                size_hint:  (.2,.2)
                font_size:  32
                text:   "="
                background_color:   (0,0,0,1)
                on_press:   root.equals()


